scale.many = function(dataframe, cols){ #sustraer categóricas
names <- names(dataframe)
for(col in cols){
name<-paste(names[cols], "z", sep=".")
dataframe[name] <- scale(dataframe[,col])
}
cat(paste("Hemos normalizado ", length(cols), " variable(s)"))
dataframe
}
